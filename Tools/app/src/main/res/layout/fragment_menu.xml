<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.Menu"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <ImageButton android:id="@+id/lantern"
            style="@style/buttons"
            android:src="@drawable/lantern_01"
            android:contentDescription="@string/lantern_button" />

        <Space style="@style/space" />

        <ImageButton android:id="@+id/level"
            style="@style/buttons"
            android:src="@drawable/level_01"
            android:contentDescription="@string/level_button" />

        <Space style="@style/space" />

        <ImageButton android:id="@+id/music"
            style="@style/buttons"
            android:src="@drawable/music_01"
            android:contentDescription="@string/music_button" />



    </LinearLayout>



</FrameLayout>